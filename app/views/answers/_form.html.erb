<%= form_for([@problem, @answer]) do |f| %>
<% if @answer.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@answer.errors.count, "error")%>
prohibited this answer from being saved:</h2>
<ul>
<% @answer.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>
<div class="field">
<p>
<%= f.label :Reply %><br />
<%= f.text_field :reply %>
</p>
</div>
<div class="actions">
<%= f.submit %>
</div>
<% end %>
